# AWS Bedrock Configuration
#AWS_REGION=us-east-1
#AWS_ACCESS_KEY_ID=your-access-key-here
#AWS_SECRET_ACCESS_KEY=your-secret-key-here
# Optional: AWS_SESSION_TOKEN=your-session-token-here

# Model Selection (AWS Bedrock Model IDs)
# Default: Claude Sonnet 4.5
CHATBOT_MODEL=anthropic.claude-sonnet-4-5-v1:0
JUDGE_MODEL=anthropic.claude-sonnet-4-5-v1:0

# Feature Flags
ENABLE_INPUT_CRITIQUE=true
ENABLE_FEEDBACK_LOOP=true
MAX_REFINEMENT_ITERATIONS=2

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
